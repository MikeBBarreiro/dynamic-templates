<!doctype html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Dynamic</title>
    <link rel="stylesheet" href="/css/style.css">
  </head>
  <body>
    <a href="/chess">Chess</a>
    <h1 style="font-family: cursive;">Welcome to Dynamic Templates</h1>
    <h2>Multiply 3 * 3 = <%= 3*3 %> </h2>
    <h2>A random number between 3 and 12 is <%= Math.floor(Math.random()*10)+3  %></h2>

    <% var a = 3, b = 2%>
    <p><%= a + b %></p>

    <% if(a===3) { %>
      <p>A is 3</p>
    <% }else{ %>
      <p>a not 3</p>
    <% } %>

    <% var fonts = ['Shadows Into Light','Crafty Girls','PT Serif'] %>
    <% var colors = [ 'blue', 'green', 'yellow', 'orange' ] %>
    <% for(var i = 0; i < colors.length; i++) { %>
    <% var bg = (colors.length - 1) === i ? 0 : i+1 %>
    <% console.log(colors.length, i, bg) %>
    <p style="color:<%= colors[i]%>;font-size:<%= 12 + 2 * i %> px; background-color: <%= colors[bg] %>"> <%= colors[i] %> </p>
    <% } %>

  </body>
</html>
